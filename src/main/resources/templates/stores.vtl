<div class='header'>
    <h1>All the Shoe Stores</h1>
</div>
<!-- List of Stores -->
<div class="lists">
<ul>
#foreach($store in $stores)

  <li><a href="/store/$store.getId()">$store.getName()</a></li>

#end
</ul>
</div>
<!-- Button to Add New Stores -->
<div class="buttons">
<form action='/stores' method='post'>
  <div class='form-group'>
    <label>Add New Store</label>
    <input type="text" name="newStore" id="newStore" class="form-control">
  </div>
  <button type="submit" class='btn btn-info'>Submit!</button>
</form>
</div>
