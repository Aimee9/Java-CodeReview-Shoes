<h3>$brand.getLabel()</h3>
<a href="/brand/$brand.getId()/delete" class="btn btn-danger">Delete Brand</a>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Stores that Carry this Brand</th>
    </tr>
  </thead>
  <tbody>
      #foreach ($store in $brand.getStores())
      <tr>
        <td><a href="/store/$store.getId()">$store.getName()</a></td>
        <!-- <td>
          <form action="/removestore/store/$store.getId()/brand/$brand.getId()" method="get">
